<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="jonnyburger.bestande.DetailActivity"
    tools:showIn="@layout/activity_detail">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/detailOptions"
                android:background="#ffffff"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentLeft="true"
                    android:text="Zählt zum Durchschnitt"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:id="@+id/countsTowardsAvgSwitch"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/detailOptions"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="4dp"
                    android:textColor="#999"
                    android:id="@+id/upcomingLabel"
                    android:visibility="gone"
                    android:text="Nächste Veranstaltungen"/>
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailOptions"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/nowListView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="4dp"
                    android:textColor="#999"
                    android:id="@+id/previousLabel"
                    android:visibility="gone"
                    android:text="Vergangene Veranstaltungen"/>
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nowListView"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_marginBottom="80dp"
                    android:id="@+id/previousListView"/>
            </LinearLayout>
        </RelativeLayout>
</ScrollView>
