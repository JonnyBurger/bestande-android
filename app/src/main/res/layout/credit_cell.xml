<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:id="@+id/section_seperator"
        android:text="HS15"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_seperator"
        android:id="@+id/module_name"
        android:paddingLeft="16dp"
        android:paddingTop="7dp"
        android:paddingBottom="3dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="Module name"/>
    <View
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_below="@+id/module_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:id="@+id/ball"
        android:background="@drawable/booked_ball">

    </View>
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ball"
        android:layout_below="@id/module_name"
        android:textSize="13dp"
        android:layout_marginLeft="7dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:id="@+id/module_status"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/module_status"
        android:layout_below="@+id/module_name"
        android:textSize="13dp"
        android:textColor="#aaaaaa"
        android:id="@+id/module_credits"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/module_credits"
        android:layout_below="@id/module_name"
        android:textSize="13dp"
        android:textColor="#aaaaaa"
        android:id="@+id/module_grade"/>
</RelativeLayout>